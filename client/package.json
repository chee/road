{
  "name": "road-client",
  "version": "0.1.0",
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "inferno": "^3.0.5",
    "inferno-compat": "^3.0.5",
    "inferno-component": "^3.0.5",
    "localforage": "^1.5.0",
    "peerjs": "^0.3.14"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "buble": "^0.15.2",
    "eslint": "^3.19.0",
    "eslint-plugin-inferno": "^6.10.4",
    "eslint-plugin-react": "^6.10.3",
    "livereloadify": "^2.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "pushstate-server": "^3.0.0",
    "uglify-js": "^2.8.18",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "watch": "nodemon --exec 'yarn build:dev' --watch src",
    "serve": "pushstate-server public ${PORT:-1690}",
    "reload": "livereloadify public",
    "go": "run-p watch serve reload",
    "build:dev": "buble src -o build; browserify build/index.js > public/bumble.js",
    "build": "yarn build:dev; uglifyjs public/bumble.js > tmp.js; mv tmp.js public/bumble.js"
  }
}
