{
  "name": "road-client",
  "version": "0.1.0",
  "dependencies": {
    "inferno": "^1.5.5",
    "inferno-component": "^1.5.5",
    "inferno-hyperscript": "^3.0.5"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "buble": "^0.15.2",
    "eslint": "^3.19.0",
    "eslint-plugin-inferno": "^6.10.4",
    "http-server": "^0.9.0",
    "livereloadify": "^2.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "uglify-js": "^2.8.18",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "watch": "nodemon --exec 'yarn build:dev' --watch src",
    "serve": "hs public -p ${PORT:-1690}",
    "reload": "livereloadify public",
    "go": "run-p watch serve reload",
    "build:dev": "buble src --jsx h -o build; browserify build/index.js > public/bumble.js",
    "build": "buble src --jsx h -o build; browserify build/index.js | uglifyjs > public/bumble.js"
  }
}
